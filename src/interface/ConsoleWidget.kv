

<ConsoleWidget>
    orientation: 'vertical'
    spacing: dp(12)

    Label:
        canvas.before:
            Color:
                rgba: .6509, .6509, .6509, 1 # Label color
            Rectangle:
                pos: self.pos
                size: self.size
        text: 'Console'
        font_size: '18sp'
        color: 1, 1, 1, 1 # white text
        size_hint_y: None
        height: self.texture_size[1] + dp(20)

    ScrollView:
        id: console_scroll_view
        size_hint_y: 1
        bar_width: dp(10)
        do_scroll_x: False

        FloatLayout:
            id: console_float_layout
            size_hint_y: None
            # height: max(self.minimum_height, self.parent.height)
            height: self.parent.height
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                id: console_output
                text: "UVSim Console\n"
                halign: 'left'
                valign: 'top'
                text_size: self.width, None
                size_hint_y: None
                size_hint_x: 1
                height: self.texture_size[1]
                pos_hint: {'x': 0, 'top': 1}
                color: 1, 1, 1, 1

    BoxLayout:
        size_hint_y: None
        height: dp(40)
        TextInput:
            id: console_input
            hint_text: 'Enter command...'
            multiline: False
            on_text_validate: root.execute_command(self.text)
            disabled: True

            # typed text color
            color: 1, 1, 1, 1
            foreground_color: 1, 1, 1, 1

            hint_text_color: 1, 1, 1, 1
            cursor_color: 1, 1, 1, 1
            background_normal: ''
            background_active: ''
            background_color: 0, 0, 0, 1
            
                
                