<LeftPaneWidget>:
    orientation: 'vertical'
    padding: 50
    spacing: 20

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: 'UVSim'
        font_size: '40sp'
        size_hint: 1, 0.3
        halign: 'center'
        valign: 'center'
        text_size: self.size

    Label:
        text:
            """1. Prepare a .txt file with BasicML instructions.
            2. Click the 'Upload .txt file' button to load and edit your program.
            3. File will be saved as user_program.txt after edits.
            4. You can then use Run/Step to execute the file."""
        size_hint: 1, 0.4
        text_size: self.size
        halign: 'left'
        valign: 'top'

    # Upload button
    BoxLayout:
        size_hint: 1, 0.1
        Button:
            id: upload_btn
            text: 'Upload .txt file'
            size_hint_x: 1
            on_release: root.upload_file()

    # Run / Step buttons
    BoxLayout:
        size_hint: 1, 0.1
        spacing: 20
        Button:
            id: run_btn
            text: 'Run'
            size_hint_x: 0.5
            on_release: root.run_button()

        Button:
            id: step_btn
            text: 'Step'
            size_hint_x: 0.5
