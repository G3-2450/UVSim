# Updated LeftPaneWidget.kv
<LeftPaneWidget>:
    orientation: 'vertical'
    padding: 50
    spacing: 20

    canvas.before:
        Color:
            rgba: root.bg_color
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint: 1, 0.1
        spacing: 10
        canvas.before:
            Color:
                rgba: root.header_bg_color
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'UVSim'
            font_size: '40sp'
            halign: 'center'
            valign: 'center'
            text_size: self.size
            color: root.header_text_color

        Spinner:
            id: theme_spinner
            text: 'Theme'  # Unicode sun and arrow
            values: ['Light Mode', 'Dark Mode']
            size_hint: None, None
            size: dp(100), dp(40)
            font_size: '16sp'
            color: 1, 1, 1, 1
            background_normal: ''
            background_color: 0.0, 0.518, 0.239, 1
            on_text: root.toggle_theme(self.text)


    Label:
        text: """1. Prepare a .txt file with BasicML instructions.\n2. Click the 'Upload .txt file' button to load and edit your program.\n3. File will be saved as user_program.txt after edits.\n4. You can then use Run/Step to execute the file."""
        size_hint: 1, 0.4
        text_size: self.size
        halign: 'left'
        valign: 'top'
        color: root.text_color

    BoxLayout:
        size_hint: 1, 0.1
        Button:
            id: upload_btn
            text: 'Upload .txt file'
            size_hint_x: 1
            background_normal: ""
            background_color: root.button_bg_color
            color: root.button_text_color
            on_release: root.upload_file()

    BoxLayout:
        size_hint: 1, 0.1
        spacing: 20
        Button:
            id: run_btn
            text: 'Run'
            size_hint_x: 0.5
            background_normal: ""
            background_color: root.button_bg_color
            color: root.button_text_color
            on_release: root.run_button()

        Button:
            id: step_btn
            text: 'Step'
            size_hint_x: 0.5
            background_normal: ""
            background_color: root.button_bg_color
            color: root.button_text_color
            on_release: root.step_button()
