# GENERAL LAYOUT
# Left pane - vertical
    # Header
    # Body - horizontal
        # Tabs + upload + theme
        # Text Editor and buttons - vertical
            # Text Editor
            # Buttons

<LeftPaneWidget>:
    orientation: 'vertical'
    spacing: dp(22)
    padding: 0, dp(20), dp(20), dp(20)

    canvas.before:
        Color:
            rgba: root.bg_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(10)]

    # HEADER
    BoxLayout:
        size_hint: 1, 0.1
        spacing: 10
        canvas.before:
            Color:
                rgba: root.header_bg_color
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'UVSim'
            font_size: '40sp'
            halign: 'center'
            valign: 'center'
            text_size: self.size
            color: root.header_text_color

    # MAIN BODY - Tabs and editor
    BoxLayout:
        orientation: 'horizontal'
        spacing: dp(22)
        size_hint_x: 1

        # LEFT SIDE: TABS
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(16)
            size_hint_x: 1/3

            ScrollView:
                id: tab_scroll_view
                bar_width: dp(10)
                do_scroll_x: False

                BoxLayout:
                    id: tab_buttons_container
                    orientation: 'vertical'
                    spacing: dp(8)
                    size_hint_y: None
                    height: self.minimum_height

                    Button:
                        text: 'Upload'
                        size_hint: 1, None
                        height: dp(40)
                        background_normal: ""
                        background_color: root.button_bg_color
                        color: root.button_text_color


            Button:
                id: upload_btn
                text: 'Upload'
                size_hint: 1, None
                height: dp(40)
                background_normal: ""
                background_color: root.button_bg_color
                color: root.button_text_color
                on_release: root.upload_file()

            Spinner:
                id: theme_spinner
                text: 'Theme'
                values: ['Light Mode', 'Dark Mode']
                size_hint: 1, None
                height: dp(40)
                color: 1, 1, 1, 1
                background_normal: ''
                background_color: 0.0, 0.518, 0.239, 1
                on_text: root.toggle_theme(self.text)

        # RIGHT SIDE: CONTENT
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            size_hint_x: 0.6

            # TEXT EDITOR (full height between header and buttons)
            TextInput:
                id: editor_input
                text: 'FILE CONTENTS WILL APPEAR HERE'
                multiline: True
                font_size: '14sp'
                background_color: 0, 0, 0, 1
                foreground_color: 1, 1, 1, 1
                size_hint: 1, 1

                # canvas.before:
                #    Color:
                #        rgba: 1, 1, 1, 1           # white border
                #    Line:
                #        width: 1.5
                #        rectangle: self.x, self.y, self.width, self.height

            BoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                size_hint_y: None
                height: dp(100)  # adjust height to fit all three buttons

                Button:
                    id: save_btn
                    text: 'Save'
                    size_hint_y: None
                    height: dp(40)
                    background_normal: ""
                    background_color: root.button_bg_color
                    color: root.button_text_color
                    on_release: root.save_editor_to_file() 

                BoxLayout:
                    spacing: 20
                    size_hint_y: None
                    height: dp(40)

                    Button:
                        id: run_btn
                        text: 'Run'
                        size_hint_x: 0.5
                        background_normal: ""
                        background_color: root.button_bg_color
                        color: root.button_text_color
                        on_release: root.run_button()

                    Button:
                        id: step_btn
                        text: 'Step'
                        size_hint_x: 0.5
                        background_normal: ""
                        background_color: root.button_bg_color
                        color: root.button_text_color
                        on_release: root.step_button()
