<MemRegWidget>:
    orientation: 'vertical'
    spacing: dp(12)
    #padding: dp(12)

    canvas.before:
        Color:
            rgba: root.bg_color
        Rectangle:
            pos: self.pos
            size: self.size

    # Registers
    #Label:
    #    canvas.before:
    #        Color:
    #            rgba: 0.0, 0.518, 0.239, 1
    #        Rectangle:
    #            pos: self.pos
    #            size: self.size
    #    text: 'Registers'
    #    font_size: '18sp'
    #    color: 1, 1, 1, 1 # whtie text
    #    size_hint_y: None
    #    height: self.texture_size[1] + dp(20)

    # Memory Locations
    Label:
        canvas.before:
            Color:
                rgba: 0.0, 0.518, 0.239, 1
            Rectangle:
                pos: self.pos
                size: self.size
        text: 'Memory'
        font_size: '22sp'
        color: 1, 1, 1, 1  # white text
        size_hint_y: None
        height: self.texture_size[1] + dp(20)

    ScrollView:
        bar_width: dp(10)
        do_scroll_x: False

        BoxLayout:
            id: memory_box
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(8)
            padding: dp(8)

            # Sample Memory slots in main

    
    # PROGRAM COUNTER & ACCUMULATOR
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: dp(68)
        spacing: dp(8)
        padding: 0, 0, dp(10), 0

        # Accumulator
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1
            Label:
                id: accumulator_label
                text: 'ACC'
                halign: 'right'
                valign: 'middle'
                font_size: '14sp'
                color: root.label_color
            TextInput:
                id: accumulator
                text: '0000'
                readonly: True
                multiline: False
                halign: 'center'
                font_size: '16sp'
                background_color: root.box_bg_color
                foreground_color: root.box_text_color

        # Program Counter
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1
            Label:
                id: program_counter_label
                text: 'PC'
                halign: 'right'
                valign: 'middle'
                font_size: '14sp'
                color: root.label_color
            TextInput:
                id: program_counter
                text: '00'
                readonly: True
                multiline: False
                halign: 'center'
                font_size: '16sp'
                background_color: root.box_bg_color
                foreground_color: root.box_text_color

