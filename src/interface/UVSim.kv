#:kivy 1.0.9


# GENERAL LAYOUT
# BoxLayout:
    # Left pane

    # BoxLayout (Right pane)
        # BoxLayout ( registers and memory)
        # BoxLayout ( console )
    

<UVSimWindow>:
    orientation: 'horizontal' # Two panes side-by-side
    spacing: dp(12) # Space between panes
    padding: dp(12) # Padding around window content
    size_hint_x: 1
    size_hint_y: 1

    canvas.before:
        Color:
            rgba: 0.0, 0.3, 0.15, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # LEFT PANE
    BoxLayout:
        size_hint_x: 1/3
        size_hint_y: 1
        orientation: 'vertical'
        LeftPaneWidget:
            id: left_panel
    
    # RIGHT PANE
    BoxLayout:
        orientation: 'horizontal'
        size_hint_x: 2/3
        size_hint_y: 1
        spacing: dp(12) # Space between Console and Reg/Mem sections
        padding: dp(12)
        
        canvas.before:
            Color:
                rgba: .1608, .1608, .1608, 1 # Background color
            Rectangle:
                pos: self.pos
                size: self.size
        
        # REGISTERS AND MEMORY
        MemRegWidget:
            id: mem_reg_display
            size_hint_x: 0.5
            size_hint_y: 1

        # CONSOLE SECTION
        ConsoleWidget:
            id: uvsim_console
            size_hint_x: 0.5
            size_hint_y: 1
